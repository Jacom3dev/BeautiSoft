@model IEnumerable<BeautiSoft.Models.Entidades.Compra> 
<div class="row">
    <div class="col mt-3">
        <a onclick="mostrarModal('@Url.Action("CrearCompra","Compras",null,Context.Request.Scheme)','Registrar Compra')" class="btn bg-site mb-3" style="color:white"><i class="fas fa-user-plus mr-2"></i>Registrar Compra</a>
        <table class="table table-bordered table-striped table-hover" id="tabla">
            <thead>
                <tr class="text-center">
                    <th scope="col"> Producto</th>
                    <th scope="col">Cantidad</th>
                    <th scope="col">Precio</th>  
                    <th scope="col">Fecha</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                
            @foreach(var Compra in Model)
            {
                <tr>
                    <td scope="row" class="text-center">@Compra.Producto.Nombre</td>
                    <td>@Compra.Cantidad</td>
                    <td class="text-center">@Compra.Precio</td>
                    <td class="text-center">@Compra.Fecha</td>
                    <td>
                        <div class="d-flex justify-content-between">
                            <a class="text-primary" href="javascript:mostrarModal('@Url.Action("ActualizarCompra","Compras",new {CompraID=Compra.CompraID},Context.Request.Scheme)','Editar Compra')"><i title="Editar" class="fas fa-user-edit"></i></a>
                            <a class="text-success" href="javascript:mostrarModal2('@Url.Action("DetalleCompra","Compras",new{CompraID=Compra.CompraID},Context.Request.Scheme)','Detalle de la Compra')"><i title="Detalle de la  Compra" class="fas fa-book"></i></a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>

    </div>
</div>

@section Scripts{
    <script src="~/DataTable/tabla.js"></script>
}
