        <div class="col">
            <input type="text" class="form-control" id="" name="" placeholder="Nombre Producto">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-6">
            <input type="number" class="form-control" id="" name="" placeholder="Precio">
