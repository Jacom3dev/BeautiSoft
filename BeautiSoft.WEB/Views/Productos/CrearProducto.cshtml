<form method="post" class="p-4 bg-white rounded col-6">
    <div class="form-group row">
        <div class="col">
            <input type="text" class="form-control" id="" name="" placeholder="Nombre Producto">
        </div>
    </div>
    <div class="form-group row justify-content-between">
        <div class="col-5">
            <input type="number" class="form-control" id="" name="" placeholder="Precio">
        </div>
        <div class="col-4">
            <input type="number" class="form-control" id="" name="" placeholder="Cantidad">
        </div>

        <div class="col-3">
            <label class="btn btn-danger w-100" for="img"><i class="fas fa-upload mr-2 text-white"></i>Imagen</label>
            <input type="file" id="img" name="name" value="" class="d-none" />
        </div>

    </div>
    <input type="submit" class="btn btn-primary" name="name" value="Crear Producto" />
</form>