@model BeautiSoft.Models.Entidades.Cliente
@{
    Layout = null;
}
<form method="post" class="bg-white rounded col-12" asp-action="ActualizarCliente" onsubmit="return jQueryAjaxPost(this, 'Actualizar cliente', '¿Desea Actulizar el cliente?')" autocomplete="off">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Documento" />
    <input type="hidden" asp-for="Estado" />
    <div class="form-group row">
        <div class="col">
            <input asp-for="Nombre" class="form-control" placeholder="Nombre Completo">
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="col">
            <input asp-for="Correo" class="form-control" placeholder="Correo">
            <span asp-validation-for="Correo" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <input asp-for="Documento" class="form-control" placeholder="Documento">
            <span asp-validation-for="Documento" class="text-danger"></span>
        </div>
        <div class="col">
            <select asp-items="@ViewBag.TiposDocumento" asp-for="TipoDocumentoId" class="form-control">
                <option>Seleccione</option>
            </select>
            <span asp-validation-for="TipoDocumentoId" class="text-danger"></span>
        </div>
        <div class="col">
            <input class="form-control" asp-for="Telefono" placeholder="Telefono">
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group row">
        <div class="col">
            <input class="form-control" asp-for="Dirreccion" placeholder="Dirreccion">
            <span asp-validation-for="Dirreccion" class="text-danger"></span>
        </div>
    </div>
    <input type="submit" class="btn btn-info" name="name" value="Actulizar Cliente" />
</form>


@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}